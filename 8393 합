#include <cstdio>
#define M 10000
int main(){
    int n;
    int A[M]={0,};
    //freopen("in.txt","r",stdin);
    scanf("%d",&n);
    int cnt=1;
    int i=0;
    int ans=0;
    while(cnt<=n){
        A[i]=cnt;
        ans+=A[i];
        i++;
        cnt++;
    }
    printf("%d\n",ans);
    return 0;
}
